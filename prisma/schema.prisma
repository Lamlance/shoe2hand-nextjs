datasource db {
  provider     = "cockroachdb"
  url          = env("DATABASE_URL")
}
generator client {
  provider = "prisma-client-js"
}
model BRAND {
  brandId   Int       @id @default(sequence())
  brandName String?
  products  PRODUCT[]
}

model USER {
  userId    Int       @id @default(sequence())
  userName  String
  birthDay  DateTime?
  email     String    @unique
  phone     String?
  address   String?
  lastLogin DateTime?
  avatarUrl String?
  shop      SHOP?
}

model SHOP {
  shopId   Int       @id @default(sequence())
  shopName String
  isHidden Boolean   @default(false)
  ownerId  Int       @unique
  products PRODUCT[]
  owner    USER      @relation(fields: [ownerId], references: [userId])
}

model PRODUCT {
  productId   Int      @id @default(sequence())
  title       String
  description String?
  quantity    Int
  price       Int
  image       String[]
  isHidden    Boolean  @default(false)
  rating      Float?
  shopId      Int
  brandId     Int      @default(0)
  brand       BRAND    @relation(fields: [brandId], references: [brandId])
  shop        SHOP     @relation(fields: [shopId], references: [shopId])
}
